{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides" :[
        {
            "files" : ["*.js"], 
            "rules" : {
                "indent" : "off",
                "no-undef" : "off",
                "linebreak-style" : "off"
            }
        }
    ]

}